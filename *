https://practice.geeksforgeeks.org/problems/minimum-steps-to-get-desired-array/0
#include <iostream>
using namespace std;

int main() 
{
	int t;
	cin>>t;
	while(t--)
	{
	    int n,c=0;
	    cin>>n;
	    int ar[n];
	    for(int i=0;i<n;i++)
	    {
	        cin>>ar[i];
	        ar[i]=ar[i]-1;
	        c=c+ar[i]%2;
	    }
	    
	}
	return 0;
}
